{
    "name": "cborgas/toy-robot",
    "description": "Simulation of a toy robot moving on a square tabletop.",
    "authors": [
        {
            "name": "Carl Borgas",
            "email": "carlborgas@gmail.com"
        }
    ],
    "type": "project",
    "config": {
        "platform": {
            "php": "7.4.3"
        }
    },
    "autoload": {
        "psr-4": {
            "ToyRobot\\": "src/ToyRobot/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ToyRobot\\Unit\\": "tests/ToyRobot/Unit/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.2",
        "mockery/mockery": "^1.4"
    },
    "require": {
        "symfony/console": "^5.1",
        "psr/container": "^1.0"
    }
}
